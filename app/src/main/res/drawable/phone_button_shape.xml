<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/color_divider" />
            <stroke
                android:width="1dp"
                android:color="@color/color_tab_text" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="4dp"
                android:top="10dp"
                android:right="4dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/color_action_bar"
                android:endColor="@color/color_background"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/color_tab_text" />
            <corners
                android:radius="4dp" />
        </shape>
        <padding
            android:left="4dp"
            android:top="10dp"
            android:right="4dp"
            android:bottom="10dp" />

    </item>
</selector>